##---------- System (super / super + shift) ----------##
# Terminal
super + Return
	alacritty

# TDrop (scratchpad)
super + shift + Return
	tdrop -ma -A -w 50% -x 25% -s dropdown kitty

# Lockscreen
super + l
	slock

# Reload Keybindings
super + BackSpace
	pkill -USR1 -x sxhkd

# Dmenu Network Menu
super + n
	networkmanager_dmenu

# Linux-notification-center
super + shift + n
	kill -s USR1 $(pidof deadd-notification-center)

# kill window
super + shift + Escape
    xkil

# change theme
super + t
	bash ~/.bin/theme_changer

# powermenu
super + x
	bash ~/.bin/powermenu

# dmenu
super + d
	dmenu_run -l 9 -p "ï©¯" 

##---------- Other programs or scripts (super + ctrl) ----------##

# Redshift
super + ctrl + r
  redshift -P -O 5000

super + ctrl + e
	redshift -x

# Color Picker
super + ctrl + p
	gpick

##---------- Applications (super + alt) ----------##

# File Manager
super + alt + f
	thunar

# Browser
super + alt + b
	chromium
super + alt + e
	firefox

# Terminal Apps
super + alt + v
	alacritty -e vim

super + alt + h
	alacritty -e btm

super + alt + n
	alacritty -e bash ~/.bin/nnn_run -T v

##---------- System Keys ----------##

# Take a screenshot
Print
	flameshot full -p $HOME/Pictures/SS/

# Take a screenshot with gui selection
super + Print
	flameshot gui
	
# Take screenshot in 5 second
alt + Print	
	flameshot full -d 5000 -p $HOME/Pictures/SS/

# Take screenshot in 10 second
shift + Print	
	flameshot full -d 10000 -p $HOME/Pictures/SS/

# Brighness control
#XF86MonBrightness{Up,Down}
	#xbacklight{ -inc 5, -dec 5}

XF86MonBrightnessUp
	brightnessctl -d "intel_backlight" set +5%

XF86MonBrightnessDown
	brightnessctl -d "intel_backlight" set 5%-

super + F1
	brightnessctl -d "intel_backlight" set 5%-
	#xbacklight -dec 5

super + F2
	brightnessctl -d "intel_backlight" set +5%
	#xbacklight -inc 5
	
# Volume control
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%

XF86AudioMute
	pactl set-sink-mute 0 toggle

super + F5
	pactl set-sink-volume 0 -5%
super + F6
	pactl set-sink-volume 0 +5%
super + F7
	pactl set-sink-mute 0 toggle

# Turn on/off wifi
super + F10
	nmcli radio all on && notify-send "Turned on wifi"

super + F9
	nmcli radio all off	&& notify-send "Turned off wifi"
